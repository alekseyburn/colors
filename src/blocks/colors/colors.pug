//- Все примеси в этом файле должны начинаться c имени блока (colors)

mixin colors(classes)

  //- Принимает:
  //-   classes    {string} - список классов
  //- Вызов:
        +colors('some-class')

  -
    // список классов
    let allClasses = '';
    if(typeof(classes) !== 'undefined' && classes) {
      for (let item of classes.split(',')) {
        allClasses = allClasses + item.trim();
      }
    }

  section(class=`${allClasses.length > 0 ? `${allClasses}` : ``}colors`)&attributes(attributes)
    +color('colors__item')
      +sliders('color__sliders', '0')
    +color('colors__item')
      +sliders('color__sliders', '1')
    +color('colors__item')
      +sliders('color__sliders', '2')
    +color('colors__item')
      +sliders('color__sliders', '3')
    +color('colors__item')
      +sliders('color__sliders', '4')
